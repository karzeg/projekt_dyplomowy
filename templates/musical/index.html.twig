{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Doce≈Ñ musical' }}
{% endblock %}

{% block body %}
    <h1>musicale</h1>
    <div class="every-con">
        <div class="grid-container">
        {% for musical in pagination.items %}
            <a href="{{ url('musical_show', {id: musical.id}) }}">
                <div class="grid-item">
                    <div class="musical">
                        {{ musical.title }}
                    </div>
                </div>
            </a>
        {% endfor %}
        </div>

        <div class="pagination">
        {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}