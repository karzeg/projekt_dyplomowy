{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Aktorzy'|trans({'%id%': actor.id|default('')}) }}
{% endblock %}

{% block body %}
    <div class="musical-container">
        <div class="creator-photo">
            <img class="nav-profile-img" src="{{ asset('uploads/'~ actor.filename) }}" alt="">
        </div>
        <div class="creator-data">
            <div class="name">
                {{ actor.name }}
            </div>
            <h2>
                Biografia
            </h2>
            <div class="bio">
                {{ actor.bio }}
            </div>
            <h2>
                Spektakle
            </h2>
            <div class="creator">
                {% for musicals in actor.musicals %}
                    <div class="col-lg-3 col-md-4 col-22 text-lg-center">
                        <div class="container-href">
                            <a href="{{ url('musical_show', {id: musicals.id}) }}" title="{{ musicals.title }}" class="d-block mb-4 h-200">
                                <img class="img-fluid img-thumbnail" src="{{ asset('uploads/'~ musicals.filename) }}" alt="">
                                <div>
                                {{ musicals.title }}
                                </div>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}