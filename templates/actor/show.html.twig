{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Aktorzy'|trans({'%id%': actor.id|default('')}) }}
{% endblock %}

{% block body %}
    <div class="grid-container-creator">
        <div class="creator-photo">
            PHOTO
        </div>
        <div class="creator-data">
            <div class="name">
                {{ actor.name }}
            </div>
            <h2>
                Biografia
            </h2>
            <div class="bio">
                {{ actor.bio }}
            </div>
            <h2>
                Spektakle
            </h2>
            <div class="creator">
                {% for musicals in actor.musicals %}
                    <a href="{{ url('musical_show', {id: musicals.id}) }}" title="{{ musicals.title }}">
                        {{ musicals.title }}
                    </a><br>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}