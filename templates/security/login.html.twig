{% extends 'base.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block body %}
    <h1>logowanie</h1>

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3" >
                Jesteś zalogowany jako {{ app.user.username }}, <a href="{{ path('app_logout') }}">Wyloguj</a>
            </div>
        {% endif %}

        <div class="form-group row">
{#            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>#}
            <input type="email" value="{{ last_username }}" name="email" class="form-control" id="inputEmail" placeholder="email" required autofocus>
        </div>
        <div class="form-group row">
{#            <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>#}
            <input type="password" name="password" id="inputPassword" placeholder="hasło" class="form-control" required>
        </div>
        <button class="btn btn-secondary" type="submit">
            Zaloguj
        </button>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">

        <div class="reg">
            Nie masz konta? <a href="{{ url('app_register') }}">Zarejestruj się.</a>
        </div>
    </form>
{% endblock %}